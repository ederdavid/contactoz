<script type="text/javascript">
  $(document).ready(function() {
                
    $('#changefollow').click(function() {
      if ($(this).hasClass("follow")){
        $(this).removeClass("follow");
        $(this).addClass("unfollow");
        $(this).html('<span> No quero seguir </span>');
	      <% if current_user %>
          var user = <%= current_user.id %>
          var feed = <%= @feed.id %>
          followFeed(user,feed);       
        <% end %>
		  } else {
        $(this).removeClass("unfollow");
        $(this).addClass("follow");
        $(this).html('<span> Seguir este post </span>');
		  }
	  });

    $('#sharedialog div.tab-content').hide();
    $('#sharedialog div.tab-content:first').show();
    $('#sharedialog .social-media ul li:first').addClass('active');
    $('#social-share ul li a').click(function(){
      alert('this');
      $('#sharedialog ul li').removeClass('active');
      $(this).parent().addClass('active');
      var currentTab = $(this).attr('href');
      $('#sharedialog div.tab-content').hide();

      $(currentTab).show();

      return false;
    });

	
  });
</script>
